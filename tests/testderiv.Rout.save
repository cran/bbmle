> f <- sbinom(prob=0.1,size=1)$formula
> deriv(parse(text=f),"prob")
expression({
    .expr3 <- size - x
    .expr4 <- 1 - prob
    .value <- x * log(prob) + .expr3 * log(.expr4)
    .grad <- array(0, c(length(.value), 1L), list(NULL, c("prob")))
    .grad[, "prob"] <- x * (1/prob) - .expr3 * (1/.expr4)
    attr(.value, "gradient") <- .grad
    .value
})
